<window>
    <id>3001</id>
    <type>window</type>
    <defaultcontrol>22</defaultcontrol>
    <coordinates>
        <system>1</system>
        <posx>0</posx>
        <posy>0</posy>
    </coordinates>
    <controls>
       
        <control type="button" id="21">
            <description>Channel Label</description>
            <width>500</width>
            <height>50</height>
            <align>left</align>
            <font>font12</font>
            <visible>true</visible>
            <label>I should be in pos(0,0) if foobar in includes.xml works</label>
        </control>
        
        <control type="button" id="22">
            <description>ExitButton</description>
            <posx>100</posx>
            <posy>100</posy>
            <width>100</width>
            <height>50</height>
            <align>left</align>
            <font>font12</font>
            <visible>true</visible>
            <label>Exit</label>
        </control>
        
        <control type="label">
            <description>recording x of y</description>
            <posx>70r</posx>
            <posy>50r</posy>
            <width>200</width>
            <label>I am (-70,-50)</label>
            <visible>true</visible>
            <align>right</align>
        </control>

        <control type="label">
            <description>recording x of y</description>
            <posx>70</posx>
            <posy>50r</posy>
            <label>I am (70,-50)</label>
            <visible>true</visible>
        </control>
        
        <control type="label">
            <description>recording x of y</description>
            <posx>300</posx>
            <posy>670</posy>
            <label>I am (200,630)</label>
            <visible>true</visible>
        </control>

        <control type="label">
            <description>recording x of y</description>
            <posx>70r</posx>
            <posy>50</posy>
            <label>I am (-70, 50)</label>
            <visible>true</visible>
        </control>
        
        <!-- XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXx -->
        
       <control type="label">
            <description>screen title</description>
            <posx>70r</posx>
            <posy>25</posy>
            <width>400</width>
            <height>35</height>
            <align>right</align>
            <aligny>center</aligny>
            <textcolor>ffddddff</textcolor>
            <label>Recordings</label>
            <animation effect="fade" time="200">WindowOpen</animation>
            <animation effect="fade" time="200">WindowClose</animation>
        </control>
    
        <control type="label">
            <description>date/time label</description>
            <posx>70r</posx>
            <posy>65</posy>
            <width>450</width>
            <height>35</height>
            <align>right</align>
            <aligny>center</aligny>
            <font>font12</font>
            <textcolor>ffffffff</textcolor>
            <label>$INFO[System.Date] [COLOR=88FFFFFF] |  $INFO[System.Time][/COLOR]</label>
            <animation effect="fade" time="200">WindowOpen</animation>
            <animation effect="fade" time="200">WindowClose</animation>
        </control>                
        
    </controls>
</window>